<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CaptureImageSeverity">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Capture Face Regions"
            android:textColor="@color/blue"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.368"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/chinButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/blue"
            android:text="Chin Region"
            app:layout_constraintEnd_toEndOf="@+id/chinImage"
            app:layout_constraintStart_toStartOf="@+id/chinImage"
            app:layout_constraintTop_toBottomOf="@+id/chinImage" />

        <ImageView
            android:id="@+id/chinImage"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/LCheekButton"
            app:layout_constraintStart_toStartOf="@+id/LCheekButton"
            app:layout_constraintTop_toBottomOf="@+id/LCheekButton"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />


        <Button
            android:id="@+id/LCheekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Left Cheek Region"
            app:layout_constraintEnd_toEndOf="@+id/LCheekImage"
            app:layout_constraintStart_toStartOf="@+id/LCheekImage"
            app:layout_constraintTop_toBottomOf="@+id/LCheekImage" />

        <ImageView
            android:id="@+id/LCheekImage"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/RCheekButton"
            app:layout_constraintStart_toStartOf="@+id/RCheekButton"
            app:layout_constraintTop_toBottomOf="@+id/RCheekButton"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <Button
            android:id="@+id/RCheekButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Right Cheek Region"
            app:layout_constraintEnd_toEndOf="@+id/RCheekImage"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/RCheekImage"
            app:layout_constraintTop_toBottomOf="@+id/RCheekImage" />

        <ImageView
            android:id="@+id/RCheekImage"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/noseButton"
            app:layout_constraintStart_toStartOf="@+id/noseButton"
            app:layout_constraintTop_toBottomOf="@+id/noseButton"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <Button
            android:id="@+id/noseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Nose Region"
            app:layout_constraintEnd_toEndOf="@+id/noseImage"
            app:layout_constraintStart_toStartOf="@+id/noseImage"
            app:layout_constraintTop_toBottomOf="@+id/noseImage" />

        <ImageView
            android:id="@+id/noseImage"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="@+id/foreheadButton"
            app:layout_constraintStart_toStartOf="@+id/foreheadButton"
            app:layout_constraintTop_toBottomOf="@+id/foreheadButton"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <Button
            android:id="@+id/foreheadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Forehead Region"
            app:layout_constraintEnd_toEndOf="@+id/foreheadImage"
            app:layout_constraintStart_toStartOf="@+id/foreheadImage"
            app:layout_constraintTop_toBottomOf="@+id/foreheadImage" />

        <ImageView
            android:id="@+id/foreheadImage"
            android:layout_width="172dp"
            android:layout_height="157dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />

        <Button
            android:id="@+id/DoneCaptureImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/green"
            android:text="Proceed to Grading"
            app:layout_constraintEnd_toEndOf="@+id/chinButton"
            app:layout_constraintStart_toStartOf="@+id/chinButton"
            app:layout_constraintTop_toBottomOf="@+id/chinButton" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
